<% if category.errors.any? %>
  <div style="color: red;">
    <h3><%= pluralize(category.errors.count, "erro") %> impediram o salvamento:</h3>
    <ul>
      <% category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: category) do |form| %>
  <p>
    <%= form.label :name, "Nome da Categoria" %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.submit "Salvar" %>
  </p>
<% end %>
