<% if product.errors.any? %>
  <div style="color: red;">
    <h3><%= pluralize(product.errors.count, "erro") %> impediram o salvamento:</h3>
    <ul>
      <% product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: product) do |form| %>
  <p>
    <%= form.label :name, "Nome" %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :price, "Preço" %><br>
    <%= form.number_field :price, step: 0.01 %>
  </p>

  <p>
    <%= form.label :description, "Descrição" %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :category_id, "Categoria" %><br>
    <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "Selecione uma categoria" %>
  </p>

  <p>
    <%= form.submit "Salvar" %>
  </p>
<% end %>
