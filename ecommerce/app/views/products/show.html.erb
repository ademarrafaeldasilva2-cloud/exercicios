<h1><%= @product.name %></h1>

<p><strong>Preço:</strong> R$ <%= @product.price %></p>
<p><strong>Descrição:</strong> <%= @product.description %></p>
<p><strong>Categoria:</strong> <%= @product.category&.name %></p>

<hr>

<%= link_to "Editar", edit_product_path(@product), class: "btn btn-warning" %> |
<%= link_to "Voltar", products_path, class: "btn btn-secondary" %> |
<%= link_to "Excluir", product_path(@product), data: { turbo_method: :delete, confirm: "Tem certeza?" }, class: "btn btn-danger" %>
