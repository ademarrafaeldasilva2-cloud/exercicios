<h1>Produtos</h1>

<p><%= link_to "Novo Produto", new_product_path, class: "btn btn-primary" %></p>

<table border="1" cellpadding="8">
  <tr>
    <th>ID</th>
    <th>Nome</th>
    <th>Preço</th>
    <th>Categoria</th>
    <th>Ações</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.name %></td>
      <td>R$ <%= product.price %></td>
      <td><%= product.category&.name %></td>
      <td>
        <%= link_to "Ver", product_path(product) %> |
        <%= link_to "Editar", edit_product_path(product) %> |
        <%= link_to "Excluir", product_path(product), data: { turbo_method: :delete, confirm: "Tem certeza?" } %>
      </td>
    </tr>
  <% end %>
</table>
